<nav class="navbar navbar-inverse" role="navigation">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <img class="navbar-brand" src="http://oidxv31lu.bkt.clouddn.com/fullstack/1484923000454.png" alt="logo">
            <a class="navbar-brand" href="/" style="margin-left:-23px">量贩offer</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><%= link_to("Home", '/')%></li>
                <li><%= link_to("Jobs", jobs_path)%></li>
            </ul>
            <div  class="navbar-form navbar-left">
              <div class="input-group">
            <%= search_form_for @q, url: search_jobs_path do |f| %>
              <%= f.search_field :title_or_description_cont, class: "form-control", placeholder: "search title or description", style: "width: 200px;"  %>
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
                </div>
            <% end %>
            </div>
          </div>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <% if !current_user %>
                <li>
                    <%= link_to "#Signup", data: {toggle: "modal",target: "#Signup"} do%>
                    <%= content_tag(:i, " 注册", class: "glyphicon glyphicon-user" )%>
                    <% end%>
                </li>
                <div class="modal fade" id="Signup">
                  <div class="modal-dialog" >
                    <div class="modal-content" style="height:450px;">
                      <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h2 class="text-center">Welcome to join us</h2>
                        </div>
                      <div class="modal-body">
                                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' })  do |f| %>
                                <%= f.error_notification %>

                                <div class="form-inputs col-sm-6 col-sm-offset-3">
                                    <%= f.input :email, required: true, autofocus: true, placeholder: "Email" %>
                                    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password" %>
                                    <%= f.input :password_confirmation, required: true, placeholder: "Password"%>
                                </div>

                                <div class="form-actions col-sm-6 col-sm-offset-3">
                                    <%= f.button :submit, "Sign up", class: "btn btn-block btn-primary" %>
                                </div>
                                <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <li>
                    <%= link_to  "#Login", data: {toggle: "modal",target: "#Login"} do%>
                    <%= content_tag(:i, " 登入", class: "glyphicon glyphicon-log-in") %>
                    <% end %>
                </li>
                <div class="modal fade" id="Login">
                  <div class="modal-dialog" >
                    <div class="modal-content">
                      <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h2 class="text-center">Welcome</h2>
                        </div>
                      <div class="modal-body" style="height:400px;">

                            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form"}) do |f| %>
                            <div class="form-inputs col-sm-6 col-sm-offset-3">
                                <%= f.input :email, required: false, autofocus: true, placeholder: "Email" %>
                                <%= f.input :password, required: false, placeholder: "Password" %>
                                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                            </div>

                            <div class="form-actions col-sm-6 col-sm-offset-3">
                                <%= f.button :submit, "Log in" ,class: "btn btn-block btn-primary"%>
                            </div>
                            <% end %>
                      </div>
                    </div>
                  </div>
                </div>
            <% else %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Hi!,
                        <%= current_user.email %>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <% if current_user.admin? %>
                        <li><%= link_to("Admin Panel", admin_jobs_path)%></li>
                        <% end %>
                        <li>
                            <%= link_to("登出", destroy_user_session_path, method: :delete) %>
                        </li>
                    </ul>
                </li>
                <% end %>
            </li>
        </ul>
    </div>
    <!-- /.navbar-collapse -->
</div>
<!-- /.container-fluid -->
</nav>
