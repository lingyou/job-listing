<div class="col-md-12">
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav navbar-right">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
      <span class="btn btn-default">排序</span>
    </a>
  <ul class="dropdown-menu">
    <li><%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound"))%></li>
    <li><divider></li>
    <li><%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound"))%></li>
    <li><divider></li>
    <li><%= link_to("按照发表时间排序", jobs_path(:order => "by_created_at"))%></li>
    </ul>
  </li>
</ul>
</div>
  <table class="table">
    <thead>
      <tr>
        <th>职缺</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>刊登时间</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.wage_lower_bound %></td>
        <td><%= job.wage_uppper_bound  %></td>
        <td><%= job.created_at %></td>

        <% if !current_user.admin? %>
          <%= link_to("Edit", edit_job_path(job)) %>
          |
          <%= link_to("Destroy", job_path(job), method: :delete, data: {confirm: "Are you sure?"}) %>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
