<table class="table table-boldered">
  <thead>
    <tr>
      <td>职缺</td>
      <td>薪资下限</td>
      <td>薪资上限</td>
      <td>刊登时间</td>
    </tr>
  </thead>
<% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job))%>
    </td>
    <td><%= job.wage_lower_bound %></td>
    <td><%= job.wage_upper_bound %></td>
    <td>
      <%= job.created_at %>
    </td>
    <% if current_user && current_user.admin? %>
    <td>
      <%= link_to edit_job_path(job), class: "btn btn-xs btn-info" do %><i class="fa fa-pencil"></i><% end %>
      <%= link_to job_path(job), :method => :delete, :class => "btn btn-xs  btn-danger", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
    </td>
    <%end%>
  </tr>
<% end %>
</table>
