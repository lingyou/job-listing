<div class="container">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <div class="form-inputs col-sm-6 col-sm-offset-3">
        <%= f.input :email, required: false, autofocus: true, placeholder: "Email" %>
        <%= f.input :password, required: false, placeholder: "Password" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions col-sm-6 col-sm-offset-3">
        <%= f.button :submit, "Log in" ,class: "btn btn-block btn-primary"%>
    </div>
    <% end %>
</div>
